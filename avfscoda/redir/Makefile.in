SHELL = /bin/sh

kmoduledir = @kmoduledir@
i_kmoduledir = $(install_root)$(kmoduledir)
build_redir = @build_redir@

CC = @CC@

CFLAGS = -O2 -Wall -Wstrict-prototypes -fno-strict-aliasing -pipe
CPPFLAGS = -I@KERNINCLUDE@ -D__KERNEL__ -DMODULE -D_LOOSE_KERNEL_NAMES

INSTALL = @INSTALL@

all: $(build_redir)

clean:
	rm -f core core.* *.o .*.o *.s *.a *~ 

.c.o:
	$(CC) $(CFLAGS) $(CPPFLAGS) -c $<

install: all
	@../../mkinstalldirs $(i_kmoduledir)
	$(INSTALL) -m 644 $(build_redir) $(i_kmoduledir)/redir.o
	/sbin/depmod -a
