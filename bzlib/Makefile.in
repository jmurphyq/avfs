SHELL = /bin/sh

top_srcdir = @top_srcdir@

CC = @CC@
LD = @LD@
CFLAGS = -I$(top_srcdir)/include @ZLIB_CFLAGS@ @CPPFLAGS@

bzlib_objs = \
	blocksort.o  \
	huffman.o    \
	crctable.o   \
	randtable.o  \
	compress.o   \
	decompress.o \
	bzlib.o

all: libbz.o

libbz.o: $(bzlib_objs)
	$(LD) -o libbz.o $(bzlib_objs)

depend:
	cp -f Makefile Makefile.old
	sed '/^# DO NOT REMOVE THIS LINE/q' < Makefile.old > Makefile
	gcc -MM $(CFLAGS) *.c >> Makefile

# DO NOT REMOVE THIS LINE, OR "make depend" WILL NOT WORK
