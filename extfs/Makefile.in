SHELL = /bin/sh

prefix = @prefix@
exec_prefix = @exec_prefix@
libdir = @libdir@
moduledir = @moduledir@

i_extfsdir = $(install_root)$(moduledir)/extfs

INSTALL=@INSTALL@

extfs_list = deb ftplist hp48 lslR mailfs patchfs rpm rpms trpm uar ucpio \
             ulha urar uzip uzoo
misc_list = extfs.ini README

all:

install:
	@../mkinstalldirs $(i_extfsdir)
	@for i in $(extfs_list); do \
	  echo Installing $$i to $(i_extfsdir); \
	  $(INSTALL) -m 755 $$i $(i_extfsdir); \
	done
	@for i in $(misc_list); do \
	  echo Installing $$i to $(i_extfsdir); \
	  $(INSTALL) -m 644 $$i $(i_extfsdir); \
	done


